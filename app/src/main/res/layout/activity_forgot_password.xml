<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Logo (Ortalanmış) -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:contentDescription="Uygulama logosu"
        android:src="@drawable/refresh"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Geri Butonu (Logo ile dikey hizalı, "Devam Et" butonunun sol kenarına yatay hizalı) -->
    <ImageButton
        android:id="@+id/backLoginBtn"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:background="@drawable/back"
        android:contentDescription="Geri dön"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="@+id/forgot_password_button"
        app:layout_constraintTop_toTopOf="@id/logoImage"
        app:layout_constraintBottom_toBottomOf="@id/logoImage" />

    <!-- Devam Et Butonu -->
    <Button
        android:id="@+id/forgot_password_button"
        android:layout_width="335dp"
        android:layout_height="52dp"
        android:layout_marginTop="244dp"
        android:backgroundTint="@color/button_text_color_3"
        android:fontFamily="@font/poppins_bold"
        android:text="Devam Et"
        android:textColor="@color/button_text_color_2"
        android:textSize="12sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.91" />

    <!-- Fragment: Email Girişi -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/enterEmailFragment"
        android:name="com.example.re_fresh.EnterEmailFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/forgot_password_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImage" />

    <!-- Fragment: Kod Girişi -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/enterCodeFragment"
        android:name="com.example.re_fresh.EnterCodeFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintBottom_toTopOf="@id/forgot_password_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Fragment: Şifre Sıfırlama -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/resetPasswordFragment"
        android:name="com.example.re_fresh.ResetPasswordFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintBottom_toTopOf="@id/forgot_password_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>