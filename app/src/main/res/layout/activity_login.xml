<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".LoginActivity">

    <!-- Logo -->

    <TextView
        android:id="@+id/textView3"
        android:layout_width="188dp"
        android:layout_height="16dp"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="347dp" />

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="176dp"
        android:layout_height="107dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ReFresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Başlık -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="start"
        android:text="Giriş Yap"
        android:textColor="@color/heading"
        android:textSize="32sp"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="138dp" />

    <!-- E-Posta -->
    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/poppins_regular"
        android:hint="E-Posta"
        android:padding="12dp"
        android:textColor="@color/editText_text_color"
        android:textColorHint="@color/editText_text_color"
        android:textSize="15sp"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="217dp" />

    <!-- Şifre (ikon içeride drawableEnd olarak) -->
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_background"
        android:drawableEnd="@drawable/not_visible"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Şifre"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="@color/editText_text_color"
        android:textColorHint="@color/editText_text_color"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="283dp" />

    <!-- Giriş Yap Butonu -->
    <Button
        android:id="@+id/register_button"
        android:layout_width="335dp"
        android:layout_height="52dp"
        android:backgroundTint="@color/button_text_color_3"
        android:fontFamily="@font/poppins_bold"
        android:text="Giriş Yap"
        android:textColor="@color/button_text_color_2"
        android:textSize="12sp"
        app:cornerRadius="12dp"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="600dp" />

    <!-- Alt Bilgi -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp">

    </LinearLayout>

    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="  Giriş Yap"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="663dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="Bir hesabın yok mu ?"
        android:textColor="@color/paragraph"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="663dp" />

</LinearLayout>
    </ScrollView>
