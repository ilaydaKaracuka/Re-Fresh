<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="Logo"
        android:src="@drawable/refresh" />

    <ImageView
        android:id="@+id/onboardingImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/onboarding_1"
        android:contentDescription="Onboarding Image" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Son kullanma tarihlerini kaçırma!"
        android:textSize="32sp"
        android:lineSpacingExtra="-8dp"
        android:textColor="@color/heading"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ürünlerini ekleyerek son kullanma\ntarihlerini takip et."
        android:textSize="15sp"
        android:textColor="@color/paragraph"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/paginationImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pagination_1"
        android:layout_marginTop="12dp"
        android:contentDescription="Pagination"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:paddingHorizontal="24dp"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/skipButton"
            android:layout_width="96dp"
            android:layout_height="52dp"
            android:text="Atla"
            android:textSize="15sp"
            android:textColor="@color/main_theme_color"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginEnd="4dp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/grey_button"
            android:elevation="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextButton"
            android:layout_width="231dp"
            android:layout_height="56dp"
            android:text="İleri"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="4dp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/main_theme_color"
            android:elevation="0dp" />
    </LinearLayout>

</LinearLayout>
