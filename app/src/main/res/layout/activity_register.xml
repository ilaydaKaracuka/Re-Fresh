<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/refresh"
            android:contentDescription="Logo" />

        <!-- Başlık -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kayıt Ol"
            android:textColor="@color/heading"
            android:textSize="32sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="start" />

        <!-- Avatar -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/select_photo_view"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/avatar"
                android:contentDescription="Avatar"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <!-- Ad Soyad -->
        <EditText
            android:id="@+id/fullNameEditText"
            android:layout_width="335dp"
            android:layout_height="50dp"
            android:hint="Ad Soyad"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            app:cornerRadius="12dp"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/editText_text_color"
            android:textColorHint="@color/editText_text_color" />

        <!-- E-Posta -->
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="335dp"
            android:layout_height="50dp"
            android:layout_marginTop="11dp"
            android:hint="E-Posta"
            app:cornerRadius="12dp"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/editText_text_color"
            android:textColorHint="@color/editText_text_color" />

        <!-- Şifre (ikon içeride drawableEnd olarak) -->
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="335dp"
            android:layout_height="50dp"
            android:layout_marginTop="11dp"
            android:hint="Şifre"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/editText_text_color"
            android:textColorHint="@color/editText_text_color"
            android:inputType="textPassword"
            android:drawableEnd="@drawable/not_visible"
            android:drawablePadding="8dp" />

        <!-- Kayıt Ol Butonu -->
        <Button
            android:id="@+id/register_button"
            android:layout_width="335dp"
            android:layout_height="52dp"
            android:layout_marginTop="160dp"
            android:text="Kayıt Ol"
            android:textColor="@color/button_text_color_2"
            android:textSize="12sp"
            app:cornerRadius="12dp"
            android:fontFamily="@font/poppins_bold"
            android:backgroundTint="@color/button_text_color_3" />

        <!-- Alt Bilgi -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bir hesabın yok mu ?"
                android:textColor="@color/paragraph"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/loginText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Giriş Yap"
                android:textColor="@color/text_color"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_semi_bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
