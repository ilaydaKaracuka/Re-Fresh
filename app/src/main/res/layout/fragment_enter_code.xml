<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EnterCodeFragment">

    <!-- Başlık -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:gravity="start"
        android:text="Şifremi Unuttum"
        android:textColor="@color/heading"
        android:textSize="32sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <!-- Açıklama Metni: Email ve açıklama yan yana -->
    <LinearLayout
        android:id="@+id/emailRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="berna.b@example.com"
            android:textColor="@color/paragraph"
            android:textSize="15.4sp" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text=" adresine gönderilen"
            android:textColor="@color/paragraph"
            android:textSize="15.4sp" />
    </LinearLayout>

    <!-- Açıklamanın devamı -->
    <TextView
        android:id="@+id/descriptionText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_regular"
        android:text="doğrulama kodunu girin."
        android:textColor="@color/paragraph"
        android:textSize="15.4sp"
        app:layout_constraintTop_toBottomOf="@id/emailRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Kod Kutuları -->
    <LinearLayout
        android:id="@+id/codeBoxesContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/descriptionText2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/codeBox1"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/count_box_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:text="6"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/paragraph" />

        <EditText
            android:id="@+id/codeBox2"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/count_box_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:text="2"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/paragraph" />

        <EditText
            android:id="@+id/codeBox3"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/count_box_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:text="9"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/paragraph" />

        <EditText
            android:id="@+id/codeBox4"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@drawable/count_box_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:text="7"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/paragraph" />
    </LinearLayout>

    <!-- Alt bilgi -->
    <LinearLayout
        android:id="@+id/bottomInfoContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/codeBoxesContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/codeNotReceivedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Kodu almadınız mı?"
            android:textColor="@color/paragraph"
            android:textSize="15.4sp" />

        <TextView
            android:id="@+id/timeCounterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/roboto_mono_regular"
            android:text="00:20"
            android:layout_marginBottom="2dp"
            android:textColor="@color/paragraph"
            android:textSize="15.4sp" />

        <TextView
            android:id="@+id/resendCodeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="2dp"
            android:clickable="true"
            android:layout_marginTop="1dp"
            android:focusable="true"
            android:fontFamily="@font/poppins_regular"
            android:text="Tekrar Gönder"
            android:textColor="@color/button_text_color_2"
            android:textSize="15.4sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>