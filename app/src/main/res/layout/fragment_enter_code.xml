<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterCodeFragment">

    <!-- Başlık -->

    <!-- Açıklama Metni - Başlığa daha yakın ve iki satır arası boşluk artırıldı -->

    <!-- İkinci açıklama satırı ayrı bir TextView olarak eklendi -->

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:gravity="start"
        android:text="Şifremi Unuttum"
        android:textColor="@color/heading"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.143"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.309" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_regular"
        android:text="berna.b@example.com adresine gönderilen"
        android:textColor="@color/paragraph"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <TextView
        android:id="@+id/descriptionText2"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_regular"
        android:text="doğrulama kodunu girin."
        android:textColor="@color/paragraph"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionText" />

    <!-- Kod Kutuları (EditText) - Corner radius 12 olacak (drawable/count_box_background dosyasına eklenecek) -->
    <TextView
        android:id="@+id/codeBoxLabel1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Doğrulama kodu birinci basamak"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/codeBox1"
        android:layout_width="66dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:alpha="0.3"
        android:background="@drawable/count_box_background"
        android:gravity="center"
        android:hint="1"
        android:importantForAccessibility="yes"
        android:inputType="number"
        android:labelFor="@id/codeBoxLabel1"
        android:maxLength="1"
        android:minHeight="48dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/codeBox2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionText2" />

    <TextView
        android:id="@+id/codeBoxLabel2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Doğrulama kodu ikinci basamak"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/codeBox2"
        android:layout_width="61dp"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:alpha="0.3"
        android:background="@drawable/count_box_background"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:hint="2"
        android:labelFor="@id/codeBoxLabel2"
        android:textSize="24sp"
        android:importantForAccessibility="yes"
        app:layout_constraintTop_toTopOf="@+id/codeBox1"
        app:layout_constraintStart_toEndOf="@+id/codeBox1"
        app:layout_constraintEnd_toStartOf="@+id/codeBox3"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/codeBoxLabel3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Doğrulama kodu üçüncü basamak"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/codeBox3"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:alpha="0.3"
        android:background="@drawable/count_box_background"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:hint="3"
        android:labelFor="@id/codeBoxLabel3"
        android:textSize="24sp"
        android:importantForAccessibility="yes"
        app:layout_constraintTop_toTopOf="@+id/codeBox1"
        app:layout_constraintStart_toEndOf="@+id/codeBox2"
        app:layout_constraintEnd_toStartOf="@+id/codeBox4"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/codeBoxLabel4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Doğrulama kodu dördüncü basamak"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/codeBox4"
        android:layout_width="61dp"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:alpha="0.3"
        android:background="@drawable/count_box_background"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:hint="4"
        android:labelFor="@id/codeBoxLabel4"
        android:textSize="24sp"
        android:importantForAccessibility="yes"
        app:layout_constraintTop_toTopOf="@+id/codeBox1"
        app:layout_constraintStart_toEndOf="@+id/codeBox3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp" />

    <!-- "Kodu almadınız mı?" Metni -->

    <!-- Zaman sayacı ayrı bir TextView olarak eklendi -->

    <!-- "Tekrar Gönder" Metni - Hizalama düzeltildi ve renk değiştirildi -->

    <TextView
        android:id="@+id/codeNotReceivedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Kodu almadınız mı? "
        android:textColor="@color/paragraph"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/timeCounterText"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/codeBox2" />

    <TextView
        android:id="@+id/timeCounterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_mono_regular"
        android:text="00:20"
        android:textColor="@color/paragraph"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/codeNotReceivedText"
        app:layout_constraintEnd_toStartOf="@+id/resendCodeText"
        app:layout_constraintStart_toEndOf="@+id/codeNotReceivedText"
        app:layout_constraintTop_toTopOf="@+id/codeNotReceivedText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/resendCodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:contentDescription="Doğrulama kodunu tekrar gönder"
        android:focusable="true"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="8dp"
        android:text="Tekrar Gönder"
        android:textColor="@color/button_text_color_2"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/codeNotReceivedText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/timeCounterText"
        app:layout_constraintTop_toTopOf="@+id/codeNotReceivedText"
        app:layout_constraintVertical_bias="0.521" />

</androidx.constraintlayout.widget.ConstraintLayout>