<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterEmailFragment">


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="start"
        android:text="Şifremi Unuttum"
        android:textColor="@color/heading"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/noAccountText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.901" />

    <TextView
        android:id="@+id/noAccountText"
        android:layout_width="380dp"
        android:layout_height="59dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Lütfen hesabınıza bağlı e-posta adresinizi girin. Şifrenizi sıfırlamak için e-postanıza bir doğrulama kodu gönderilecektir."
        android:textColor="@color/paragraph"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.362" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/poppins_regular"
        android:hint="E-Posta"
        android:padding="12dp"
        android:textColor="@color/editText_text_color"
        android:textColorHint="@color/editText_text_color"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/noAccountText" />


</androidx.constraintlayout.widget.ConstraintLayout>