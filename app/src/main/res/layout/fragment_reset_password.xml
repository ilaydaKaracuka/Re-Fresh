<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordFragment">

    <!-- Logo ve Geri Tuşu Yan Yana -->


    <!-- Yeni şifre alanı için erişilebilirlik etiketi -->

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="294dp"
        android:layout_height="47dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="start"
        android:text="Yeni Şifre Oluştur"
        android:textColor="@color/heading"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.376"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/noAccountText"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/noAccountText"
        android:layout_width="365dp"
        android:layout_height="31dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Yeni bir şifre girin ve unutmamaya çalışın."
        android:textColor="@color/paragraph"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:id="@+id/newPasswordLabel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Yeni şifre girişi"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Birinci şifre alanı - ID düzeltildi ve contentDescription yerine labelFor kullanıldı -->

    <!-- Şifre tekrarı alanı için erişilebilirlik etiketi -->

    <EditText
        android:id="@+id/newPasswordEditText"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_background"
        android:drawableEnd="@drawable/not_visible"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Yeni Şifre"
        android:importantForAccessibility="yes"
        android:inputType="textPassword"
        android:labelFor="@id/newPasswordLabel"
        android:padding="12dp"
        android:textColor="@color/editText_text_color"
        android:textColorHint="@color/editText_text_color"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noAccountText" />

    <TextView
        android:id="@+id/confirmPasswordLabel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Yeni şifre tekrar girişi"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- İkinci şifre alanı - contentDescription yerine labelFor kullanıldı -->
    <EditText
        android:id="@+id/confirmPasswordEditText"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_background"
        android:drawableEnd="@drawable/not_visible"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Yeni Şifreyi Tekrar Girin"
        android:importantForAccessibility="yes"
        android:inputType="textPassword"
        android:labelFor="@id/confirmPasswordLabel"
        android:padding="12dp"
        android:textColor="@color/editText_text_color"
        android:textColorHint="@color/editText_text_color"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPasswordEditText" />


</androidx.constraintlayout.widget.ConstraintLayout>