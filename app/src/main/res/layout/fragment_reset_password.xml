<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ResetPasswordFragment">

    <!-- Başlık -->
    <TextView
        android:id="@+id/titleTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:gravity="start"
        android:text="Yeni Şifre Oluştur"
        android:textColor="@color/heading"
        android:textSize="32sp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <!-- Açıklama -->
    <TextView
        android:id="@+id/noAccountText3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Yeni bir şifre girin ve unutmamaya çalışın."
        android:textColor="@color/paragraph"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Gizli etiketler -->
    <TextView
        android:id="@+id/newPasswordLabel3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Yeni şifre girişi"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/confirmPasswordLabel3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Yeni şifre tekrar girişi"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Yeni Şifre -->
    <EditText
        android:id="@+id/newPasswordEditText3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/edit_text_background"
        android:drawableEnd="@drawable/not_visible"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Yeni Şifre"
        android:importantForAccessibility="yes"
        android:inputType="textPassword"
        android:labelFor="@id/newPasswordLabel3"
        android:padding="12dp"
        android:textColor="@color/editText_text_color"
        android:textColorHint="@color/editText_text_color"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/noAccountText3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Yeni Şifre Tekrar -->
    <EditText
        android:id="@+id/confirmPasswordEditText3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/edit_text_background"
        android:drawableEnd="@drawable/not_visible"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Yeni Şifreyi Tekrar Girin"
        android:importantForAccessibility="yes"
        android:inputType="textPassword"
        android:labelFor="@id/confirmPasswordLabel3"
        android:padding="12dp"
        android:textColor="@color/editText_text_color"
        android:textColorHint="@color/editText_text_color"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/newPasswordEditText3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>