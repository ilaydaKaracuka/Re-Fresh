<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:background="@color/settings_button"
            android:backgroundTint="@color/white">

            <!-- Profil Fotoğrafı ve Değiştir İkonu -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/user_photo"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/btn_choose_profile_photo"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/choose_profile_photo_icon"
                    android:layout_gravity="bottom|end"
                    android:translationX="10dp"
                    android:translationY="15dp"
                    android:padding="6dp" />
            </FrameLayout>

            <!-- Kullanıcı Adı -->
            <EditText
                android:id="@+id/editTextUsername"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edit_text_background"
                android:hint="Berna Batı"
                android:padding="12dp"
                android:textSize="15sp"
                android:textColor="@color/heading"
                android:fontFamily="@font/poppins_regular"
                android:layout_gravity="center_horizontal" />

            <!-- Hesabı Sil Butonu -->
            <Button
                android:id="@+id/btnDeleteAccount"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="9dp"
                android:backgroundTint="@color/settings_button"
                android:text="Hesabı Sil"
                app:cornerRadius="8dp"
                android:paddingLeft="8dp"
                android:textColor="@color/heading"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:fontFamily="@font/poppins_regular"
                android:drawableLeft="@drawable/trash_icon"
                android:drawablePadding="8dp" />

            <!-- Çıkış Yap Butonu -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="14dp"
                android:backgroundTint="@color/settings_button"
                android:text="Çıkış Yap"
                android:textColor="@color/heading"
                android:textSize="15sp"
                app:cornerRadius="8dp"
                android:paddingLeft="8dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/poppins_regular"
                android:drawableLeft="@drawable/log_out_icon"
                android:drawablePadding="8dp" />

            <!-- Bildirim Ayarı Başlığı -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/notification_icon"
                    android:layout_marginLeft="7dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bildirim Zamanını Ayarla"
                    android:textSize="15sp"
                    android:layout_marginLeft="9dp"
                    android:textColor="@color/heading"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>

            <!-- Checkbox Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:background="@drawable/settings_grid_background"
                android:layout_marginBottom="16dp"
                android:alignmentMode="alignMargins"
                android:rowOrderPreserved="false"
                android:useDefaultMargins="true">

                <CheckBox
                    android:id="@+id/checkbox_son_gun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Son Gün"
                    android:textSize="14sp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/heading"
                    android:fontFamily="@font/poppins_regular" />

                <CheckBox
                    android:id="@+id/checkbox_3_gun_once"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 Gün Önce"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/heading"
                    android:fontFamily="@font/poppins_regular" />

                <CheckBox
                    android:id="@+id/checkbox_1_hafta_once"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Hafta Önce"
                    android:textSize="14sp"
                    android:layout_marginRight="65dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/heading"
                    android:fontFamily="@font/poppins_regular" />

                <CheckBox
                    android:id="@+id/checkbox_1_ay_once"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Ay Önce"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/heading"
                    android:fontFamily="@font/poppins_regular" />
            </GridLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
