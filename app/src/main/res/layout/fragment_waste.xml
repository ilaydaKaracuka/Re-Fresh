<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="6dp">

        <!-- Başlık -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginBottom="8dp" />

        <!-- Kategori Satırları -->

        <!-- GIDA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/meal_icon"
                android:contentDescription="Gıda"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gıda"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="991"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/count_box_background" />
        </LinearLayout>

        <!-- İÇECEK -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/beverage_icon"
                android:contentDescription="İçecek"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="İçecek"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="0"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/count_box_background" />
        </LinearLayout>

        <!-- İLAÇ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/medicine_icon"
                android:contentDescription="İlaç"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="İlaç"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="4"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/count_box_background" />
        </LinearLayout>

        <!-- KOZMETİK -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/cosmetic_icon"
                android:contentDescription="Kozmetik"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kozmetik"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="1"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/count_box_background" />
        </LinearLayout>

        <!-- TEMİZLİK -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/cleaning_icon"
                android:contentDescription="Temizlik"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Temizlik"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="0"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/count_box_background" />
        </LinearLayout>

        <!-- DİĞER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/more_icon"
                android:contentDescription="Diğer"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Diğer"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="1"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/count_box_background" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
